<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/category/new">Criar nova Categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(
                c=>
                {%>
                    <tr>
                        <th><%=c.id%></th>
                        <th><%=c.title%></th>
                        <th><%=c.slug%></th>
                        <th>

                            <a href="/admin/categories/edit/<%=c.id%>" class="btn btn-warning">Editar</a>
                            <form style="display: inline;" method="post" action="/categories/delete" onsubmit="deleteCheck(event,this)"> 
                                <input type="hidden" name="id" value="<%=c.id%>">
                                <button type="submit" class="btn btn-danger">Deletar</button>
                            </form>
                        </th>    
                    </tr>                
                <%}) 
            %>            
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs')%>

<script>
    function deleteCheck(event,form){

        event.preventDefault()
        let confirmaton=confirm('Deseja excluir esta Categoria')
        if(confirmaton){
            console.log('deletar sim')
            form.submit()
        }else{
            console.log('deletar não')
        }

    }
</script>