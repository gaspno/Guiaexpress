<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/home_navbar.ejs')%>


<body>

<div class="container">
    <hr>
    <div class="bg-primary text-white rounded">
        <h1 class="display-4">Bem vindo</h1>
      
           </div>
        <% result.articles.rows.forEach(
            a=>
            {%>
                <div class="card-header">
                    <%=a.title%>
                </div>
                <div class="card-body">
                    <a href="/<%=a.slug%>" class="btn btn-success">Ler artigo</a>
                </div>  
                <br>              
            <%}) 
        %>      
        <div class="row">
            <hr>
            <div class="col col-12">
                <% if(result.next){%>
                    <a style="float:right" href="/articles/page/<%=result.page+1%>">Next >>></a>
                    <%}
                %> 
                <% if(result.page!=1){%>
                    <a style="float:left" href="/articles/page/<%=result.page-1%>"><<< Prev</a>
                    <%}
                %> 
            </div>
            
        </div>        
 
</div>
</body>

